{
  "name": "@bcrl/veramo-sd-jwt",
  "version": "0.0.6",
  "source": "src/index.ts",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "type": "module",
  "keywords": [
    "veramo",
    "sd-jwt"
  ],
  "veramo": {
    "pluginInterfaces": {
      "ISDJwtPlugin": "./src/types/ISDJwtPlugin.ts"
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "tsc",
    "generate-plugin-schema": "pnpm veramo dev generate-plugin-schema",
    "build:watch": "tsc -b --watch",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "format": "pnpm dlx @biomejs/biome check --apply .",
    "clean": "rm -rf tmp && rm -rf build && rm tsconfig.tsbuildinfo",
    "release": "dotenv release-it"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@sd-jwt/core": "^0.6.0",
    "@sd-jwt/decode": "^0.4.0",
    "@sd-jwt/sd-jwt-vc": "^0.4.0",
    "@sd-jwt/types": "^0.6.0",
    "@sphereon/ssi-sdk-ext.did-utils": "^0.17.0",
    "@veramo/cli": "^5.6.0",
    "@veramo/core-types": "^5.6.0",
    "@veramo/utils": "5.6.1-next.57"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@release-it/conventional-changelog": "^8.0.1",
    "@sd-jwt/crypto-nodejs": "next",
    "@types/node": "^20.11.27",
    "@veramo/core": "^5.6.0",
    "@veramo/data-store": "^5.6.0",
    "@veramo/did-manager": "^5.6.0",
    "@veramo/did-provider-jwk": "^5.6.0",
    "@veramo/did-resolver": "^5.6.0",
    "@veramo/key-manager": "^5.6.0",
    "@veramo/kms-local": "^5.6.0",
    "@vitest/coverage-v8": "^1.3.1",
    "cross-env": "^7.0.3",
    "did-resolver": "^4.1.0",
    "dotenv-cli": "^7.4.1",
    "release-it": "^17.1.1",
    "typeorm": "^0.3.20",
    "typescript": "5.3.3",
    "vitest": "^1.3.1"
  },
  "files": [
    "build/**/*",
    "src/**/*",
    "README.md",
    "plugin.schema.json",
    "LICENSE"
  ],
  "release-it": {
    "github": {
      "release": true
    },
    "npm": {
      "publish": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        },
        "infile": "CHANGELOG.md"
      }
    }
  }
}
